@using HealthySystem.Common
@using HealthySystem.Web.Areas.Identity.ViewModels.Account
@using HealthySystem.Web.Infrastructure.HtmlHelpers
@model LoginViewModel
@{
    ViewBag.Title = "Влез в " + WebConstants.DomainTitle;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { area = "Identity", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.EditorFor(m=>m.UserName)
                @Html.EditorFor(m=>m.Password)

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-4">
                        @Html.Submit(new {@class = "btn btn-lg btn-primary", value = "Вход"})
                        @Html.ActionLink("Регистрирай се", "Register", new { area = "Identity" }, new { @class = "btn btn-lg btn-default ml-15" })
                    </div>
                </div>

