@using HealthySystem.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@WebConstants.ManagerAreaName</title>
    @Styles.Render("~/Content/manager")
    @RenderSection("styles", required: false)
    <meta name="robots" content="noindex, nofollow" />
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="navbar-brand" onclick="window.open('/','_blank')">@WebConstants.ManagerAreaName</span>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Начало", "Index", "Home", new { area = "Manager" }, null)</li>
                        <li>@Html.ActionLink("Съдържание", "Index", "Article", new { area = "Manager" }, null)</li>
                        <li>@Html.ActionLink("Тагове", "Index", "Tag", new { area = "Manager" }, null)</li>
                        <li>@Html.ActionLink("Снимки", "Index", "Image", new { area = "Manager" }, null)</li>
                        @if (User.IsInRole(WebConstants.AdminRole))
                        {
                            <li>@Html.ActionLink("Рубрики", "Index", "Rubric", new { area = "Manager" }, null)</li>
                            <li>@Html.ActionLink("Потребители", "Index", "Account", new { area = "Identity" }, null)</li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Настройки
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink(WebConstants.AdminMenuTitleManageDelete, "Index", "ManageDelete", new { area = "Manager" }, null)</li>
                                    <li>@Html.ActionLink(WebConstants.AdminMenuTitleFacebook, "Index", "Facebook", new { area = "Manager" }, null)</li>
                                    <li>@Html.ActionLink(WebConstants.AdminMenuTitleGooglePlus, "Index", "GooglePlus", new { area = "Manager" }, null)</li>
                                    <li>@Html.ActionLink(WebConstants.AdminMenuTitleGoogleAnalytics, "Index", "GoogleAnalytics", new {area = "Manager"}, null)</li>
                                    <li><a href="~/Glimpse.axd" target="_blank">Glimpse</a></li>
                                    <li><a href="~/Elmah.axd" target="_blank">Elmah</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" id="manager">
            @if (ViewBag.Error != null)
            {
                <div class="mt-30 pt-30 text-center">
                    <div class="alert alert-danger">@ViewBag.Error</div>
                </div>
            }
            else if (ViewBag.Success != null)
            {
                <div class="mt-30 pt-30 text-center">
                    <div class="alert alert-success">@ViewBag.Success</div>
                </div>
            }
            @RenderBody()
        </div>
    </div>
    <div class="row">
        <hr />
        <footer class="col-md-12">
            <p class="text-center">&copy; @DateTime.Now.Year - @WebConstants.ManagerAreaName</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/manager")
    @RenderSection("scripts", required: false)
</body>
</html>