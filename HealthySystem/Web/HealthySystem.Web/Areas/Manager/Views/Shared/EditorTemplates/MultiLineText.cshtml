@model string
<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "control-label col-md-2" })
    <div class="col-md-6">
        @Html.TextAreaFor(m => m, new { @class = "form-control " + ViewBag.AddClass, cols = "40", rows = "4" })
    </div>
    @Html.ValidationMessageFor(m => m, null, new { @class = "alert-danger" })
</div>