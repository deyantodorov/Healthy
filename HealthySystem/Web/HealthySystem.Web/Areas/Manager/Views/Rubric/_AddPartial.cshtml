@using HealthySystem.Common
@using HealthySystem.Web.Infrastructure.HtmlHelpers
@model HealthySystem.Web.Areas.Manager.ViewModels.Rubric.RubricViewModel
@using (Ajax.BeginForm("Add", "Rubric", null, new AjaxOptions()
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.InsertBefore,
    UpdateTargetId = "allRubrics",
    OnFailure = "Manager.DisplayError('" + ModelConstants.ModelError + "')",
    OnSuccess = "$('#btnCancelAddRubric').trigger('click');"
}, new { id = "addNewRubricForm" }))
{
    @Html.AntiForgeryToken()
    @Html.EditorFor(m => m.Name)
    @Html.EditorFor(m => m.ParentId)
    @Html.EditorFor(m => m.Alias)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            @Html.Submit(new { @class = "btn btn-primary", value = "Добави рубрика" })
        </div>
    </div>
}