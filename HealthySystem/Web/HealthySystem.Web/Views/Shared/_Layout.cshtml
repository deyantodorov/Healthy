@using HealthySystem.Common
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title - @WebConstants.DomainTitle</title>
    <meta name="description" content="@ViewBag.Description">
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1">
    @if (!string.IsNullOrWhiteSpace(ViewBag.OgUrl))
    {
        <meta property="og:url" content="@ViewBag.OgUrl" />
        <meta property="og:type" content="@ViewBag.OgType" />
        <meta property="og:title" content="@ViewBag.OgTitle" />
        <meta property="og:description" content="@ViewBag.OgDescription" />
        <meta property="og:image" content="@ViewBag.OgImage" />
    }
    @Styles.Render("~/Content/site")
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
</head>
<body>
    <div id="header">
        <div class="container pb-10">
            @Html.Partial("_AdTop")
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        <a href="~/">Mega<span>Здраве</span></a>
                    </h1>
                    <h2>живот, здраве, лечение и най-доброто за вас</h2>
                </div>
                <div class="col-md-4">
                    @Html.Partial("_Search")
                </div>
                <div class="col-md-2">
                    <a href="https://www.facebook.com/megazdrave" target="_blank" class="social-button fb-button"><em>Facebook</em></a>
                    <a href="https://plus.google.com/u/0/+Megazdravei/posts" target="_blank" class="social-button gp-button"><em>Google Plus</em></a>
                </div>
            </div>
        </div>
        <div class="container">
            @Html.Partial("_Menu")
        </div>
    </div>
    <div id="content">
        <div class="container">
            @RenderBody()
        </div>
    </div>
    @Html.Partial("_Footer")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
    @Html.Partial("_GoogleAnalytics")
    @RenderSection("scripts", required: false)
</body>
</html>