@using HealthySystem.Web.Infrastructure.HtmlHelpers
@model HealthySystem.Web.Areas.Identity.ViewModels.Account.RegisterUserByManagerViewModel
@{
    ViewBag.Title = "Добави нов потребител";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<hr/>

@using (Html.BeginForm("RegisterUserByManager", "Account", new { area = "Identity" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.EditorFor(m => m.UserName)
    @Html.EditorFor(m => m.Email)
    @Html.EditorFor(m => m.Password)
    @Html.EditorFor(m => m.ConfirmPassword)
    @Html.EditorFor(m => m.UserRoleId, new
   {
       ListItem = Model.UserRoles
   })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.Submit(new { @class = "btn btn-primary", value = "Създай" })
                @Html.ActionLink("Откажи", "Index", "Account", new { area = "Identity" }, new { @class = "btn btn-default ml-15" })
            </div>
        </div>
}