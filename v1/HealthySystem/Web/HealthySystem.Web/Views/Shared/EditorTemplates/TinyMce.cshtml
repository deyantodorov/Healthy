﻿@model string
<div class="form-group" style="margin-top: -15px;">
    @Html.LabelFor(m => m, new { @class = "control-label col-md-2" })
    <div class="col-md-8">
        @Html.TextAreaFor(m => m, new { @class = "form-control " + ViewBag.AddClass})
    </div>
    @Html.ValidationMessageFor(m => m, null, new { @class = "alert-danger" })
</div>